{
  "name": "shared-costs-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "author": {
    "name": "Carmelo Ricarte Rocamora",
    "url": "https://github.com/CarmeloRicarte"
  },
  "scripts": {
    "dev": "vite --mode development --host",
    "staging": "vite --mode staging --host",
    "prod": "vite --mode production --host",
    "build": "tsc && vite build",
    "preview": "vite preview --host",
    "lint": "eslint --fix . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:noWatch": "vitest --watch=false",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/testing-library__jest-dom": "5.14.5",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vitest/ui": "^0.28.5",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard-with-typescript": "30.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.1",
    "husky": "8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "vite": "^4.1.4",
    "vitest": "^0.28.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run format",
      "npm run test:noWatch"
    ],
    "*.{scss,md}": [
      "npm run format"
    ]
  }
}
